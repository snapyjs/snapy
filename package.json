{
  "name": "snapy",
  "description": "Webpack based, snapshot only test runner",
  "version": "0.1.0",
  "homepage": "https://github.com/snapyjs/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/snapyjs/snapy"
  },
  "engines": {
    "node": "*"
  },
  "main": "lib/snapy-client.js",
  "bin": {
    "snapy": "cli.js"
  },
  "files": [
    "lib/*.js",
    "cli.js",
    "shrinkwrap.yaml"
  ],
  "dependencies": {
    "acorn": "^5.4.1",
    "chalk": "^2.3.1",
    "fs-extra": "^5.0.0",
    "grasp-equery": "^0.4.0",
    "hook-up": "^0.2.0",
    "memory-fs": "^0.4.1",
    "ora": "^1.4.0",
    "read-conf": "^0.4.0",
    "source-map": "^0.7.1",
    "virtual-module-webpack-plugin": "^0.3.0",
    "webpack": "^3.11.0",
    "webpack-merge": "^4.1.1",
    "yaku": "^0.18.5"
  },
  "devDependencies": {
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.2.1",
    "script-runner": "^0.1.7"
  },
  "keywords": [
    "testrunner",
    "snapy",
    "snapshots",
    "parallel",
    "webpack"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "build": "coffee --bare --no-header --compile --output lib/ src/*.coffee",
    "dev": "npm run build && ./cli.js",
    "doc": "toDoc",
    "test": "coffee --nodejs --expose-internals src/snapy.coffee",
    "watch": "snapy --watch",
    "preversion": "#npm run test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
